<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="AdColonyExtension" package="com.failsafegames.AdColonyExtension" version="1.0.0" company="Failsafe Games" />
	
	<!-- output -->
	<app main="Main" file="AdColonyExtension" path="bin" />
	
	<window background="#000000" fps="60" />
	<window width="800" height="480" unless="mobile" />
	<window orientation="landscape" vsync="false" antialiasing="0" if="cpp" />
	
	<set name="openfl-legacy" if="android||ios" />
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<haxelib name="openfl" />
	<haxelib name="extension-adcolony" />
	
	<!-- assets -->
	<icon path="assets/openfl.svg" />
	
	<!-- optimize output
	<haxeflag name="-dce full" /> -->
	
	<!-- Native Extensions -->
	<template path="templates" />
	
</project>
